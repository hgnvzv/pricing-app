generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id             Int     @id @default(autoincrement())
  name           String
  price          Float   // هذا هو سعرك القديم (سنعتبره المفرد)
  wholesalePrice Float   @default(0) // الحقل الجديد (بقيم افتراضية 0 للسلع القديمة)
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  role     String
}