datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")  // <-- أضفنا هذا السطر الجديد
}

generator client {
  provider = "prisma-client-js"
}

// ... بقية الجداول كما هي (Product و User)
model Product {
  id    Int     @id @default(autoincrement())
  name  String
  price Float
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  role     String
}